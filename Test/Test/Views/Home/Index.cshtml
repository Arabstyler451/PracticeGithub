<link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />

<!-- Hero Section -->
<section class="hero">
    <div class="hero-container">

        <!-- LEFT: Text -->
        <div class="hero-content">
            <div class="hero-text">

                <h1 class="hero-title" style="font-family: Bacasime Antique !important; font-weight: 300; font-size: 4rem;">
                    Premium Venue<br />Hire in the Heart<br />
                    <span class="highlight">of the City</span>
                </h1>

                <p class="hero-description">
                    Professional meeting rooms and conference spaces designed<br />
                    for productivity and success. Book your perfect space today.
                </p>

                <ul class="hero-buttons">
                    <li>
                        <a class="browse-room-btn"
                           asp-controller="Rooms"
                           asp-action="Index">
                            Browse Rooms
                        </a>
                    </li>
                    <li>
                        <a class="make-booking-btn"
                           asp-controller="Bookings"
                           asp-action="Index">
                            Make a Booking
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- RIGHT: Image Grid -->
        <div class="hero-images">
            <div class="image-grid">

                <!-- Top Row -->
                <div class="image-row">
                    <div class="image-item">
                        <img src="~/images/HomePageImage1.jpg" alt="Meeting Room" />
                        <div class="image-overlay"></div>
                    </div>
                    <div class="image-item">
                        <img src="~/images/HomePageImage2.jpg" alt="Venue Hallway" />
                        <div class="image-overlay"></div>
                    </div>
                </div>

                <!-- Bottom Row -->
                <div class="image-row">
                    <div class="image-item">
                        <img src="~/images/HomePageImage3.jpg" alt="Team Meeting" />
                        <div class="image-overlay"></div>
                    </div>
                    <div class="image-item">
                        <img src="~/images/HomePageImage4.jpg" alt="Boardroom" />
                        <div class="image-overlay"></div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</section>

<script src="~/js/HomeScript.js"></script>
