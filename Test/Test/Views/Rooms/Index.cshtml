@model IEnumerable<Test.Models.Room>

@{
    ViewData["Title"] = "Our Rooms";
}

<link rel="stylesheet" href="~/css/Rooms.css" asp-append-version="true" />

<section class="rooms-section">

    @if (User.IsInRole("Admin"))
    {
        <div class="admin-floating-btn">
            <a asp-area="" asp-controller="Rooms" asp-action="Create" class="btn-add-room">
                <i class="fas fa-plus-circle"></i>
                <span>Add New Room</span>
            </a>
        </div>
    }

    <style>
        .admin-floating-btn {
            position: fixed;
            bottom: 30px;
            right: 30px;
            z-index: 1000;
        }

        .btn-add-room {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 14px 24px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            text-decoration: none;
            border-radius: 50px;
            font-weight: 600;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
            transition: all 0.3s ease;
            border: none;
        }

            .btn-add-room:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
                color: white;
                text-decoration: none;
            }

            .btn-add-room i {
                font-size: 20px;
            }
    </style>

    <!-- Header -->
    <div class="rooms-header">
        <h1>Our Rooms</h1>
        <p>
            Discover the perfect space for your meeting, conference, or event.
            All rooms come equipped with modern amenities and professional service.
        </p>
    </div>

    <!-- Rooms Grid -->
    <div class="rooms-grid">
        @foreach (var room in Model)
        {
            <div class="room-card">

                <div class="room-image">
                    <img src="~/images/HomePageImage1.jpg" alt="@room.Name" />
                    <span class="price-badge">
                        £@room.PricePerHour / hour
                    </span>
                </div>

                <div class="room-content">
                    <h3>@room.Name</h3>
                    <p>@room.Description</p>

                    <div class="room-meta">
                        <span>👥 Up to @room.Capacity people</span>
                    </div>

                    <div class="room-actions">
                        <a asp-action="Details"
                           asp-route-id="@room.RoomId"
                           class="room-link">
                            View Details →
                        </a>

                        <a asp-controller="Bookings"
                           asp-action="Create"
                           asp-route-RoomId="@room.RoomId"
                           class="book-now-btn">
                            Book Now
                        </a>
                    </div>

                </div>

            </div>
        }
    </div>

</section>

<!-- CTA SECTION -->
<section class="rooms-cta">
    <h2>Can't Find What You Need?</h2>
    <p>Contact our team for custom arrangements and special requirements</p>

    <div class="cta-buttons">
        <a asp-controller="Home" asp-action="ContactUs" class="cta-outline">
            Contact Us
        </a>
        <a asp-controller="Bookings" asp-action="Create" class="cta-filled">
            Make a Booking
        </a>
    </div>
</section>
