</head>
<body>
    <header id="header">
        <nav id="primary-header" class="navbar py-4">
            <div class="container-fluid px-5">
                <!-- Left: Logo -->
                <a class="navbar-brand me-5" asp-area="" asp-controller="Home" asp-action="Index">City Point</a>

                <!-- Center: Navigation Links -->
                <div class="nav-center mx-auto">
                    <ul class="navbar-nav d-flex flex-row">
                        <li class="nav-item mx-3">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link active" asp-area="" asp-controller="Rooms" asp-action="Index">Rooms</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link active" asp-area="" asp-controller="Bookings" asp-action="Index">Bookings</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>
                    </ul>
                </div>

                <!-- Right: Login/Register -->
                <div class="nav-right">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Start -->
    <div class="container-fluid footer" style="background-color: #1B1917; color: white; padding: 3rem 0;">
        <div class="container">
            <div class="row" style="display: flex; flex-wrap: wrap; margin: 0 -15px;">
                <!-- Column 1: CityPoint -->
                <div class="col-lg-3" style="padding: 0 15px; margin-bottom: 1rem;">
                    <div style="max-width: 200px;">
                        <h4 style="color: white; margin: 0 0 1rem 0; font-size: 2.0rem; font-family: 'Bacasime Antique', serif; font: 400;">CityPoint</h4>
                        <p style="color: #CFCDCB; margin: 0; line-height: 1.8; font-size: 0.9rem; word-wrap: break-word; font-family: 'Poppins', sans-serif;">
                            Premium venue hire for your business<br> needs.
                            Professional spaces designed<br> for success.
                        </p>
                    </div>
                </div>

                <!-- Column 2: Quick Links -->
                <div class="col-lg-3" style="padding: 0 15px; margin-bottom: 1rem;">
                    <div>
                        <h4 style="color: white; margin: 0 0 1rem 0; font-size: 1.1rem; ">Quick Links</h4>
                        <div style="display: flex; flex-direction: column;">
                            <a href="/" style="color: #CFCDCB; text-decoration: none; margin-bottom: 0.25rem; font-size: 0.9rem; line-height: 1.6; font-family: 'Poppins', sans-serif; transition: color 0.3s ease;">Home</a>
                            <a href="/Rooms" style="color: #CFCDCB; text-decoration: none; margin-bottom: 0.25rem; font-size: 0.9rem; line-height: 1.6; font-family: 'Poppins', sans-serif; transition: color 0.3s ease;">Our Rooms</a>
                            <a href="/Bookings" style="color: #CFCDCB; text-decoration: none; margin-bottom: 0.25rem; font-size: 0.9rem; line-height: 1.6; font-family: 'MontsePoppinsrrat', sans-serif; transition: color 0.3s ease;">Make a Booking</a>
                            <a href="/Home/AboutUs" style="color: #CFCDCB; text-decoration: none; margin-bottom: 0.25rem; font-size: 0.9rem; line-height: 1.6; font-family: 'Poppins', sans-serif; transition: color 0.3s ease;">About Us</a>
                        </div>
                    </div>
                </div>

                <!-- Column 3: Services -->
                <div class="col-lg-3" style="padding: 0 15px; margin-bottom: 1rem;">
                    <div>
                        <h4 style="color: white; margin: 0 0 1rem 0; font-size: 1.1rem;">Services</h4>
                        <div style="display: flex; flex-direction: column;">
                            <a href="#" style="color: #CFCDCB; text-decoration: none; margin-bottom: 0.25rem; font-size: 0.9rem; line-height: 1.6; font-family: 'Poppins', sans-serif; transition: color 0.3s ease;">Conference Rooms</a>
                            <a href="#" style="color: #CFCDCB; text-decoration: none; margin-bottom: 0.25rem; font-size: 0.9rem; line-height: 1.6; font-family: 'Poppins', sans-serif; transition: color 0.3s ease;">Meeting Spaces</a>
                            <a href="#" style="color: #CFCDCB; text-decoration: none; margin-bottom: 0.25rem; font-size: 0.9rem; line-height: 1.6; font-family: 'Poppins', sans-serif; transition: color 0.3s ease;">Training Rooms</a>
                            <a href="#" style="color: #CFCDCB; text-decoration: none; margin-bottom: 0.25rem; font-size: 0.9rem; line-height: 1.6; font-family: 'Poppins', sans-serif; transition: color 0.3s ease;">Event Spaces</a>
                        </div>
                    </div>
                </div>

                <!-- Column 4: Contact -->
                <div class="col-lg-3" style="padding: 0 15px; margin-bottom: 1rem;">
                    <div>
                        <h4 style="color: white; margin: 0 0 1rem 0; font-size: 1.1rem;">Contact</h4>
                        <div style="display: flex; flex-direction: column;">
                            <div style="color: #CFCDCB; margin-bottom: 0.25rem; font-size: 0.9rem; line-height: 2; display: flex; align-items: flex-start; font-family: 'Montserrat', sans-serif;">
                                <i class="fas fa-map-marker-alt" style="margin-right: 0.7rem; margin-top: 0.45rem; font-size: 0.8rem;"></i>
                                <span>123 Business District, City Point, CP 12345</span>
                            </div>
                            <a style="color: #CFCDCB; text-decoration: none; margin-bottom: 0.25rem; font-size: 0.9rem; line-height: 2; display: flex; align-items: flex-start; font-family: 'Montserrat', sans-serif;">
                                <i class="fas fa-phone" style="margin-right: 0.7rem; margin-top: 0.4rem; font-size: 0.8rem;"></i>
                                <span>+1 (555) 123-4567</span>
                            </a>
                            <a style="color: #CFCDCB; text-decoration: none; margin-bottom: 0.25rem; font-size: 0.9rem; line-height: 2; display: flex; align-items: flex-start; font-family: 'Montserrat', sans-serif;">
                                <i class="fas fa-envelope" style="margin-right: 0.7rem; margin-top: 0.55rem; font-size: 0.8rem;"></i>
                                <span>info@citypoint.com</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Copyright -->
            <div style="border-top: 1px solid rgba(255, 255, 255, 0.1); margin-top: 2rem; padding-top: 1rem; text-align: center;">
                <p style="color: #CFCDCB; margin: 0; font-size: 0.9rem; font-family: 'Poppins', sans-serif;">
                    © 2025 CityPoint Room Hire. All rights reserved.
                </p>
            </div>
        </div>
    </div>
    <!-- Footer End -->

    <style>
        /* Hover effect for Quick Links and Services */
        .col-lg-3:nth-child(2) a:hover,
        .col-lg-3:nth-child(3) a:hover {
            color: #A4642B !important;
        }
    </style>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!--<script src="js/jquery-1.11.0.min.js"></script>-->
    <!--<script type="text/javascript" src="js/bootstrap.bundle.min.js"></script>-->
     <!--<script type="text/javascript" src="js/plugins.js"></script>-->
    <!--<script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>-->
    <!--<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>-->
         <!--<script type="text/javascript" src="js/script.js"></script>-->
    <!-- <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>-->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>