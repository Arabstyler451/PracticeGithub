<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Holiday</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Holiday.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar custom-navbar">
            <div class="container-fluid header-content">

                <!-- TOP ROW: Branding + Login/Register -->
                <div class="top-row w-100 d-flex justify-content-between align-items-center">
                    <a class="navbar-brand header-title" asp-controller="Home" asp-action="Index">
                        Holiday Planner
                    </a>

                    <div class="auth-links">
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    </div>
                </div>

                <!-- NAV MENU BELOW BRANDING -->
                <ul class="navbar-nav nav-pill-menu mt-3">
                    <li class="nav-item">
                        <a class="nav-link nav-pill" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-pill" asp-controller="Destinations" asp-action="Index">Destinations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-pill" asp-controller="Travels" asp-action="Index">Travels</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-pill" asp-controller="Flights" asp-action="Index">Flights</a>
                    </li>
                </ul>

            </div>
            <partial name="_LoginPartial" />
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Holiday - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
