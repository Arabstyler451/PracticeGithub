@model IEnumerable<Holiday.Models.ticket>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ticketName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ticketType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ticketDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ticketTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ticketName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ticketType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ticketDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ticketTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flight.FlightId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ticketId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ticketId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ticketId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
