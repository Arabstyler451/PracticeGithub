@model IEnumerable<SandwellExampleSeedData.Models.HotelRoom>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<a asp-action="SortByGuestRating" asp-route-ascending="true">Sort by Guest Rating (Ascending) </a>
<a asp-action="SortByGuestRating" asp-route-ascending="false">Sort by Guest Rating (Descending) </a>

<form method="get" asp-action="FilterByPrice">
    <label>Min Price:</label>
    <input type="number" name="minPrice" step="0.01" />
    <label>Max Price:</label>
    <input type="number" name="maxPrice" step="0.01" />
    <button type="submit">Filter</button>
</form>



<form asp-action="FilterByBedrooms" method="get">
    <div>
        <label for="bedrooms">Number of Bedrooms</label>
        <select id="bedrooms" name="bedrooms">
            <option value="1">1 Bedroom</option>
            <option value="2">2 Bedrooms</option>
            <option value="3">3 Bedrooms</option>
            <option value="4">4 Bedrooms</option>
            <option value="5">5 Bedrooms</option>
        </select>
        <button type="submit">Filter Hotels</button>
    </div>
</form>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerNight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StarRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuestRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfBedrooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerNight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StarRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuestRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfBedrooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvailable)
            </td>
            <td>
                    <a asp-controller="Bookings" asp-action="Create" asp-route-hotelRoomId="@item.Id">Book Now</a>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<br />

<form asp-action="Index">
    <button type="submit">See all rooms</button>
</form>

<br />

<form asp-action="AvailableRooms">
    <button type="submit">Only display available rooms</button>
</form>

